<div id="siteSearchBox">
    <img id="siteSearchIcon" src="https://www.v2ex.com/static/img/search_icon_light.png" alt="" />
    <input type="text" id="siteSearchInput" placeholder="搜索本站内容" />
</div>
<script>
    document.getElementById('siteSearchInput').addEventListener('keypress', function (event) {
        if (event.key === 'Enter') {
            var query = "site:www.lxtend.com " + this.value;
            var searchUrl = "https://www.google.com/search?q=" + encodeURIComponent(query);
            window.open(searchUrl, '_blank');
        }
    });
</script>