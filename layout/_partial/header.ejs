<div id="nav-outer">
  <nav id="main-nav" class="outer">
    <a id="main-nav-toggle" class="nav-icon"></a>
    <% for (var i in theme.menu){ %>
      <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>">
        <%= i %>
      </a>
      <% } %>
        <%- partial('_partial/search-bar', null, {cache: !config.relative_link}) %>
          <div class="main-nav-space-between"></div>
          <!-- <a id="light-btn" class="float-button" onclick="switch_dark_mode()" title="切换暗色模式"></a> -->
          <a id="light-btn" class="float-button" onclick="switch_dark_mode()" title="切换暗色模式"></a>
          <% if (theme.rss){ %>
            <a id="nav-rss-link" class="nav-icon" href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>"></a>
            <% } %>
  </nav>
</div>
<script>
    var light_btn = document.getElementById("light-btn");
    var isNowDark = localStorage.getItem("isDarkMode");
    if (isNowDark === "1") {
      light_btn.innerText = "亮";
      light_btn.title = "切换亮色模式";
    } else {
      light_btn.innerText = "暗";
      light_btn.title = "切换暗色模式";
    }
</script>
<div id="header-title">
  <h1 id="logo-wrap">
    <a href="<%- url_for() %>" id="logo">
      <%= config.title.replace(/，/g, ', ' ).replace(/；/g, '; ' ).replace(/：/g, ': ' ).replace(/！/g, '! '
        ).replace(/‘/g, '` ' ).replace(/’/g, "' " ).replace(/“/g, ' “' ).replace(/”/g, "” " ).replace(/（/g, ' ('
        ).replace(/）/g, ') ' ).replace(/。/g, '. ' ).replace(/？/g, '? ' ) %>
    </a>
  </h1>
  <% if (theme.subtitle || config.subtitle){ %>
    <h2 id="subtitle-wrap">
      <a href="<%- url_for() %>" id="subtitle">
        <%= (theme.subtitle || config.subtitle).replace(/，/g, ', ' ).replace(/；/g, '; ' ).replace(/：/g, ': '
          ).replace(/！/g, '! ' ).replace(/‘/g, '` ' ).replace(/’/g, "' " ).replace(/“/g, ' “' ).replace(/”/g, "” "
          ).replace(/（/g, ' (' ).replace(/）/g, ') ' ).replace(/。/g, '. ' ).replace(/？/g, '? ' ) %>
      </a>
    </h2>
    <% } %>
</div>