<%- partial('_partial/article', {post: page, index: false}) %>
<div id="gitalk-container"></div>
<link rel="stylesheet" href="/css/gittalk.css">
<script src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
<script>
    var title=document.getElementsByClassName('p-name article-title')[0].innerText
    var readcontainer=document.getElementsByClassName('read-container')[0];
    var xhr = new XMLHttpRequest();
            xhr.open("GET", "https://japi.lxtend.com/get-view-count?name="+title, true);
            xhr.onload = function () {
                if (xhr.status === 200) {
                    var responseData = xhr.responseText;
                    readcontainer.innerHTML ="<span class='readtime'>"+responseData+"已阅"+"</span>";
                } 
            };
            xhr.send();
    var gitalk = new Gitalk({
    clientID: '8fbc834103fb9fe573f1',
    clientSecret: 'aa3887d9faab4cad901811fcd38829ea1b456da2',
    repo: 'blog_comments',
    owner: 'lixiangwuxian',
    admin: ['lixiangwuxian'],
    id: title,
    distractionFreeMode: true
    });
    gitalk.render('gitalk-container');
</script>