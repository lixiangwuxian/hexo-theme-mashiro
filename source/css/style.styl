html
  scroll-padding-top: 80px
  transition: all 0.5s ease-in-out

.dark
  filter: invert(0.9) hue-rotate(180deg)

.dark img
  filter: invert(0.9) hue-rotate(180deg)

// img
//  transition: all 0.5s ease-in-out

.float-button
  transition: all 0.5s ease-in-out
  // position: fixed;
  height: 18px;
  width: 18px;
  // bottom: 50px;
  // right: 50px;
  // z-index:999;
  background: #fff;
  background-image: url("/image/day_and_night.svg");
  background-position: 0px 18px;
  background-size: cover;
  border-radius: 4%;

.dark .float-button
  background-position: 0px 0px;

.masked
  transition: color 0.13s linear;
  color: #252525;
  text-shadow: none;
  background-color: #252525;

.masked:hover
  color: #fff;
  // text-shadow: 0 0 1px #fff;
  // background-color: #252525;

#siteSearchBox
  max-width 700px
  margin 20px auto
  border-radius 2px
  overflow hidden
  display flex
  align-items center
  padding 5px
  margin-left 20px
  background #f1f1f1

  * 
    border none
    padding 5px
    margin 0
    height 16px
    line-height 16px

  input[type="text"]
    flex-grow 1
    font-size 16px
    background none

  input[type="submit"]
    display none

  img
    width 16px
    height 16px
    margin-left 8px
    padding-right 8px

.readtime
  color: #000

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-serif, sans-serif
  -webkit-text-size-adjust: 100%

textarea
  font-family: inherit

#content
  margin: 0 auto
  @extend $variable-width

.outer
  clearfix()
  margin: 0 auto
  @extend $variable-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  display: flex
  flex-direction: column
  .mobile-nav-on &
    left: 50%

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

